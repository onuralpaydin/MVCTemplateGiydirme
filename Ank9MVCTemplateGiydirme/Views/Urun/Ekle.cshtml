@model Urun
@{
    ViewData["Title"] = "Ekle";
}
<section class="hero-wrap hero-wrap-2" style="background-image: url('../../images/bg_5.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center mb-5">
                <h1 class="mb-2 bread">Ürünler</h1>
                <p class="breadcrumbs"><span class="mr-2"></span><span><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home <i class="fa fa-chevron-right"></i></a></span></p>
            </div>
        </div>
    </div>
</section>
<div class="container-fluid mt-2">
    <h1 class="text-center">Ürün Ekle</h1>

    <form class="m-3" asp-action="Ekle" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label for="resim">Görsel:</label>
            <input type="file" id="resim" name="resim" class="form-control-file"asp-for="UrunResimURL">
        </div>
        <div class="form-group">
            <label asp-for="UrunAdi"></label>
            <input asp-for="UrunAdi" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="UrunTanimi"></label>
            <textarea asp-for="UrunTanimi" class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="UrunFiyat"></label>
            <input type="number" step="0.1" asp-for="UrunFiyat" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Kategori.KategoriAdi"></label>
            <select class="form-control" asp-for="Kategori.KategoriAdi" asp-items="@ViewBag.Kategoriler">
            </select>
        </div>
        <button type="submit" class="btn btn-success">Ekle</button>
    </form>
</div>
